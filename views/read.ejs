<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
<div class="w-full h-full p-10 bg-zinc-900 text-white"> 
    <a class="text-blue-500 " href="/">Back to Home</a>
    <h1 class="text-3xl mb-3 tracking-tighter"> All Users </h1>
    <div class="users flex gap-3 flex-wrap ">
        <%if (user.length> 0){ %> 

            <% user.forEach(function(user){ %>
                <div class="user w-72 p-4 rounded-lg bg-zinc-800 ">
                    <div class="w-full h-72 overflow-hidden rounded-lg bg-zinc-700">
                        <img class="w-full h-full object-cover object-rop" src="<%= user.image %>" alt="">  
                   </div>
                   <h2 class="text-xl mt-3 tracking-tighter"> <%= user.name %> </h2>
                   <h5 class="text-zinc-500"> <%= user.email %></h5>
                   <div class="flex gap-3">
                       <a href="/edit/<%= user._id%>" class="text-zinc-200">Edit User </a>
                       <a href="/delete/<%= user._id %>" class="text-red-500"> Delete User </a>
           
                   </div>
               </div>
              <% }) %>
            <% } else { %>
                <h3 class="text-red-700 px-5 text-3xl"> No Users yet </h3>
           <%  } %>
       

    

    
</div>
</body>
</html>